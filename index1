    // Show predictor if paid
    if (window.location.search.includes("access=true")) {
      document.getElementById("intro").style.display = "none";
      document.getElementById("predictor").style.display = "block";
    }

    function predictColleges() {
      const rank = parseInt(document.getElementById("rank").value);
      const commRank = parseInt(document.getElementById("communityRank").value);
      const community = document.getElementById("community").value;
      const branch = document.getElementById("branches").value;
      const district = document.getElementById("districts").value;

      let resultHTML = "<h3>✅ Realistic College Predictions (Based on 2023 Trend):</h3>";

      if ((rank <= 16000 || commRank <= 6000) && (district === "ALL" || district === "Coimbatore")) {
        resultHTML += `
          <div>
            <p><strong>1. KPR Institute of Engineering and Technology, Coimbatore</strong></p>
            <ul>
              <li>💼 Branches: AIDS, AI & ML, Cybersecurity</li>
              <li>🏆 Autonomous & NAAC A++</li>
              <li>🔺 Chance: <b>High</b></li>
            </ul>
          </div>
        `;
      }

      if ((rank <= 16000 || commRank <= 6000) && (district === "ALL" || district === "Coimbatore")) {
        resultHTML += `
          <div>
            <p><strong>2. Sri Krishna College of Engineering and Technology, Coimbatore</strong></p>
            <ul>
              <li>💼 Branches: IT, AI & DS</li>
              <li>🎯 Top-tier placement, great for tech</li>
              <li>🔺 Chance: <b>Moderate to High</b></li>
            </ul>
          </div>
        `;
      }

      if (!resultHTML.includes("<div>")) {
        resultHTML = "😔 Sorry, no colleges match your input in current dataset.";
      }

      document.getElementById("result").innerHTML = resultHTML;
    }
  </script></body>
